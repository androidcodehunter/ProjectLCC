<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingTop="15dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <ScrollView style="@style/fill_wrap" >

                <LinearLayout
                    style="@style/fill_wrap"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:background="@drawable/pallet_one" />

                        <ImageView
                            android:id="@+id/iv_tick_one"
                            style="@style/right_tick" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:background="@drawable/pallete_two" />

                        <ImageView
                            android:id="@+id/iv_tick_two"
                            style="@style/right_tick" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:background="@drawable/pallete_three" />

                        <ImageView
                            android:id="@+id/iv_tick_three"
                            style="@style/right_tick" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:background="@drawable/pallete_four" />

                        <ImageView
                            android:id="@+id/iv_tick_four"
                            style="@style/right_tick" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:background="@drawable/pallete_five" />

                        <ImageView
                            android:id="@+id/iv_tick_five"
                            style="@style/right_tick" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/fill_wrap" >

                        <ImageView
                            style="@style/fill_wrap"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/pallete_six" />

                        <ImageView
                            android:id="@+id/iv_tick_six"
                            style="@style/right_tick" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:background="@null"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txt_urea_title"
                style="@style/fill_wrap"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/dhan_type"
                style="@style/fill_wrap"
                android:orientation="vertical"
                android:paddingLeft="50dp" >

                <RadioButton
                    android:id="@+id/radio_boro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boro"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/radio_ropa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ropa"
                    android:textColor="@android:color/black" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_pallate_message"
                style="@style/fill_wrap"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>